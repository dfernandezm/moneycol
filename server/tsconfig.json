{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": false, // allow having any as type so we can keep js code inside ts
        "moduleResolution": "node",
        "sourceMap": false,
        //"outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        }
    },
    "include": [
        "**/*"
    ]
}